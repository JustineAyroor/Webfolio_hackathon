<% include ./partials/header %>
<div class="container">
    <div class="row">
        <div style="width: 50%; height: 17rem; margin: auto;" class="bg-dark">
            <h1 class="text-center text-light">Edit Certifications</h1>
            <form action="/api/tskill/<%= wfid %>/<%= certID %>?_method=PUT" method="post">
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="name" value="<%= cert.name %>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="number"  name="year" value="<%= cert.year %>" required>
                </div>
                <div class="form-group mx-1">
                    <button class="btn btn-lg btn-success btn-block">Edit Skill</button>
                </div>
            </form>
            <a href="/" class="btn btn-lg btn-danger btn-block">Go Back</a>
        </div>
    </div>
</div>
<% include ./partials/footer %>