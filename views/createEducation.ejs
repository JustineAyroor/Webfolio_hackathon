<% include ./partials/header %>
<div class="container">
    <div class="row">
        <div style="width: 50%; margin: 25px auto;" class="bg-dark">
            <h1 class="text-center text-light">Add Education Entry</h1>
            <form action="/createEducation/<%=wfID%>" method="POST">
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="name" placeholder="Enter Institution Name" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="stDate" placeholder="Enter Start Date" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="eDate" placeholder="Enter End Date" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="isCurr" placeholder="Are you currently studying in this Institute:(true/false)" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="major" placeholder="Enter Your Major" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="gpa" placeholder="Enter Your GPA" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="courses" placeholder="Enter Your Courses Seperated By Commas" required>
                </div>>
                <div class="form-group mx-1">
                    <button class="btn btn-lg btn-success btn-block">Submit</button>
                </div>
            </form>
            <a href="/" class="btn btn-lg btn-danger btn-block">Go Back</a>
        </div>
    </div>
</div>

<% include ./partials/footer %>