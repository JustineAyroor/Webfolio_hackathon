<% include ./partials/header %>
<div class="container">
    <div class="row">
        <div style="width: 50%; margin: 25px auto;" class="bg-dark">
            <h1 class="text-center text-light">Create WebFolio From Parser</h1>
            <form action="#" method="POST">
                <hr class="bg-warning">
                <h3 class="text-white text-center">Basic Info</h3>
                <hr class="bg-warning">
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="name" placeholder="title" value="<%= parserObj.Name %>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="phone" placeholder="Objective" value="<%= parserObj.Phone %>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="email" placeholder="Linkedn Link" value="<%= parserObj.Email %>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="git" placeholder="GitHub Link" value="<%= parserObj.URLS[1] %>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="linkdn" placeholder="GitHub Link" value="<%= parserObj.URLS[0] %>" required>
                </div>
                <hr class="bg-warning">
                <h3 class="text-white text-center">Font Styles</h3>
                <hr class="bg-warning">
                <div class></div>
                <div class="form-group mx-1">
                    <button class="btn btn-lg btn-success btn-block">Submit</button>
                </div>
            </form>
            <a href="/" class="btn btn-lg btn-danger btn-block">Go Back</a>
        </div>
    </div>
</div>

<% include ./partials/footer %>