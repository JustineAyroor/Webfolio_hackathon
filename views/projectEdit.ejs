<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;" class="bg-dark">
            <h1 class="text-center text-light">Edit Project Data</h1>
            <form action="/api/project/<%=wfid%>/<%=pid%>?_method=PUT" method="POST">
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="name" value="<%=projects.name %>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="stDate" value="<%=projects.start %>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="eDate" value="<%=projects.end %>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="desc" value="<%=projects.desc %>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="link" value="<%=projects.link %>" required>
                </div>

                <div class="form-group mx-1">
                    <button class="btn btn-lg btn-success btn-block">Update Project!</button>
                </div>
            </form>
            <a href="/" class="btn btn-lg btn-danger btn-block">Go Back</a>
        </div>
    </div>
</div>

<% include ./partials/header %>
