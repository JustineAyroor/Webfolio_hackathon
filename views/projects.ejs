<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;" class="bg-dark">
            <h1 class="text-center text-light">Project Data</h1>
            <form action="/register" method="POST">
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="name" placeholder="Project Name" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="stDate" placeholder="Start Date in form MM/DD/YYYY" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="eDate" placeholder="End Date in form MM/DD/YYYY. Write Current if Still In Progress.." required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="desc" placeholder="Explain More about you Project" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="link" placeholder="Show off Your Project.." required>
                </div>
                
                <div class="form-group mx-1">
                    <button class="btn btn-lg btn-success btn-block">Add Project!</button>
                </div>
            </form>
            <a href="/" class="btn btn-lg btn-danger btn-block">Go Back</a>
        </div>
    </div>
</div>

<% include ./partials/header %>