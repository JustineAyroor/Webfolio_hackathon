<% include ./partials/header %>
<div class="container">
    <div class="row">
        <div style="width: 30%; height: 17rem; margin: auto;" class="bg-dark">
            <h1 class="text-center text-light">Login</h1>
            <form action="/api/tskill/<%= wfid %>/" method="post">
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="name" placeholder="name" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="number" min=0 max=10 name="level" placeholder="level of Exp">
                </div>
                <div class="form-group mx-1">
                    <button class="btn btn-lg btn-success btn-block">Add Skill</button>
                </div>
            </form>
            <a href="/" class="btn btn-lg btn-danger btn-block">Go Back</a>
        </div>
    </div>
</div>
<% include ./partials/footer %>