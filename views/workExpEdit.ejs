<% include ./partials/header %>

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;" class="bg-dark">
            <h1 class="text-center text-light">Edit Work Experience Data</h1>
            <form action="/api/workExp/<%=wfid%>/<%=weid%>?_method=PUT" method="POST">
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="name" value="<%=company.name%>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="stDate" value="<%=company.start%>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="eDate" value="<%=company.end%>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="isCurr" value="<%=company.isCurr%>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="jobTitle" value="<%=company.jobTitle%>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="jobDesc" value="<%=company.jobDesc%>" required>
                </div>
                <div class="form-group mx-1">
                    <input class="form-control" type="text" name="techUsed" value="<%=company.techUsed%> ">
                </div>

                <div class="form-group mx-1">
                    <button class="btn btn-lg btn-success btn-block">Edit Work Exp!</button>
                </div>
            </form>
            <a href="/" class="btn btn-lg btn-danger btn-block">Go Back</a>
        </div>
    </div>
</div>

<% include ./partials/header %>
